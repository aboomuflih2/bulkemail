# Server Configuration
PORT=3000
NODE_ENV=production

# Email Configuration (Optional - users can configure via UI)
# SMTP Settings
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Gmail OAuth Settings (Optional)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=

# Outlook OAuth Settings (Optional)
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_REDIRECT_URI=

# Security
JWT_SECRET=your-jwt-secret-key-here
CORS_ORIGIN=*

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_RECIPIENTS=10000

# Frontend API Base (for Netlify)
# Set to your deployed backend base URL (e.g. https://bulk-email.yourdomain.com)
VITE_API_BASE=
